<div style="max-width: 400px; margin: 200px auto; border: 1px solid #ccc; padding: 20px;">
  <h1 style="text-align: center; margin-bottom: 20px;">Log in</h1>
  {{#if message}}
    <p style="color: red; margin-bottom: 10px;">{{message}}</p>
  {{/if}}
  <form action="/login" method="POST">
    <div style="margin-bottom: 10px;">
      <label for="email" style="display: block; margin-bottom: 5px;">Email:</label>
      <input type="email" id="email" name="email" required style="padding: 10px; width: 100%; border-radius: 5px; border: 1px solid #ccc;">
    </div>
    <div style="margin-bottom: 10px;">
      <label for="password" style="display: block; margin-bottom: 5px;">Password:</label>
      <input type="password" id="password" name="password" required style="padding: 10px; width: 100%; border-radius: 5px; border: 1px solid #ccc;">
    </div>
    <div style="text-align: center;">
      <button type="submit" style="padding: 10px; background-color: #4CAF50; color: #fff; border-radius: 5px; border: none;">Enter</button>
    </div>
  </form>
</div>


